---
import "../styles/style.css";
---
<header>
<nav>
  <div class="logo">
    <a href="/"><img src="/img/header/logovector.svg" alt="Karrusel's logo vector"></a>
 
  </div>

    <ul class="menu">
        <li><a href="/faq">FAQ</a></li> 
        <li> <a href="/galleri">Gallery</a></li>
        <li><a href="/"><img id="logovector" src="/img/header/logovector.svg" alt="Karrusel's logo vector"><span class="mobile_only">Home</span></a></li>
        <li><a href="/lineup">Line - up</a></li>
        <li><div id="ticket">
        <img id="ticketbackground" src="/img/header/ticketbackground.svg" alt="svg background for ticket">
        <a href="/tickets">Tickets</a></div></li>
    </ul>

     <div class="burger">
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
    </div>
</nav>
</header>

<style>
    /* DESKTOP */
header {
    background-color: var(--aubergine);
    box-shadow: 0 10px 20px  rgba(39, 19, 23, 15);
}

.logo {
  display: none;
}

.mobile_only {
  display: none;
}

.menu {
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    list-style-type: none;
    padding: 1rem 0.4rem;
}

li a {
color:var(--beige);
font-size: var(--h2-textD1);
font-family: var(--primary-font);
text-transform: uppercase;
text-decoration: none;
}

li a:hover {
color: var(--guld90);
transition: color 0.3s ease-in-out;
}

#logovector {
    width: 100%;
    height: auto;
}

#logovector:hover {
filter: drop-shadow(0 0 0.70rem var(--guld));
transition: color 0.3s ease-in-out;
}

/* ticket placering med baggrund */
#ticket {
position: relative;
text-align: center;
}

#ticket a {
    position: relative;
}

#ticketbackground {
position: absolute;
top: 0px;
left: 50%;
transform:translate(-50%, -50%);
width: 120%;
height: auto;
}

/* n√•r ticket bliver hover, kommer der en downward animation */
#ticket:hover {
    animation: ticketAnimation 0.2s linear forwards;
    animation-iteration-count: 1;
}

@keyframes ticketAnimation {
  0% {
    transform: translate(0, 0) scale(1);
  }
  100% {
    transform: translate(0, 15%) scale(1);
  }
}

/* burgermenu */
.burger {
  width: 60px;
  height: auto;
  cursor: pointer;
}

.burger .line {
    width: 60px;
    height: 2px;
    background-color: var(--beige);
    border-radius: 10px;
    margin-bottom:10px;
    transition: 4s ease-in;
}

.burger {
  display: none;
}

/* MOBILE */
@media (max-width: 800px) {
  .menu {
        display: none;
    }
    .logo {
      display: block;
      width: 20%;
    }

    #logovector {
      display: none;
    } 

    .mobile_only {
  display: inline-block;
}

    #ticketbackground {
      display: none;
    }

    #ticket {
      text-align: right;
    }

    nav {
      height: 70px;
      width: auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 18px 20px;
    }

    .burger {
    display: block;
  }

  /* burgerikon animation.active - VHA. Chatgpt */
  @keyframes lineBeat1 {
    0%, 100% {
        width: 10px;
    }
    50% {
        width: 20px;
    }
}
@keyframes lineBeat2 {
    0%, 100% {
        width: 50px;
    }
    50% {
        width: 60px;
    }
}
@keyframes lineBeat3 {
    0%, 100% {
        width: 30px;
    }
    50% {
        width: 40px;
    }
}
.burger.active .line:nth-child(1) {
    opacity: 1;
    animation: lineBeat1 0.6s ease-in-out infinite alternate;
}
.burger.active .line:nth-child(2) {
    opacity: 1;
    animation: lineBeat2 0.6s ease-in-out infinite alternate; 
}
.burger.active .line:nth-child(3) {
    opacity: 1;
    animation: lineBeat3 0.6s ease-in-out infinite alternate;
}
  nav.active .menu {
    display: block;
    background-color: var(--aubergine);
    position: absolute;
    top: 69px;
    left: 0;
    width: 100%;
    box-shadow: 0 10px 20px rgba(39, 19, 23, 15);
    z-index: 10;
    text-align: right;
    padding-right: 36px;
  }
  nav.active .menu li {
    margin: 10px 20px;
    padding: 5px;
  }
  nav.active .menu a {
    font-size: var(--h1-textM2);
  }
  }
</style>


<!-- JavaScript -->
<script>
 const burger = document.querySelector(".burger");
const nav = document.querySelector("nav");
const menu = document.querySelector(".menu");
const links = document.querySelectorAll(".menu li a");

burger.addEventListener("click", () => {
  burger.classList.toggle("active");
  nav.classList.toggle("active");
});

links.forEach((link) => {
  link.addEventListener("click", () => {
    burger.classList.remove("active");
    nav.classList.remove("active");
  });
});
</script>
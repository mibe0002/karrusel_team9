---
import "../styles/style.css";
---

<button id="back_button"><img src="../img/header/circusfinger.svg" alt="circus finger functions as a back button"></button>

<style>
button {
    background: none;
    border: none;
    padding: 40px 22px;
    cursor: pointer;
    width: 9%;
    min-width: 147px;
    height: auto;
}

button:hover {
    filter: drop-shadow(0 0 0.20rem var(--guld));
    scale: 1.1;
    transition: color 0.3s ease-in-out
}

/* MOBILE */
@media (max-width:800px) {
button {
    padding: 15px 18px;
    width: 20%;
    min-width: 100px;
    height: auto;
}

button:active {
    filter: drop-shadow(0 0 0.20rem var(--guld));
    scale: 1.1;
    transition: color 0.3s ease-in-out
}
}
</style>

<script>
    // fra mdn web docs: History: back() method
    document.getElementById("back_button").addEventListener("click", () => {
        history.back();
    })
</script>
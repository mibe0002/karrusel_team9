---

<!-- dot notation virkede ikke = {myData.artistname} i stedet lÃ¸st med bracket notation -->
<MainLayout title={myData['artistname']}>
    <Backbutton />
    <Titlebanner h1={myData['artistname']} />
<div class="grid_1-1-1">
        <div class="photo">
            <img src={myData['img']} alt="Kunstner" loading="lazy">
            <div class="navn">
                <h2>{myData['artistname']}</h2>
                <a href="#">FOLLOW THE ARTIST</a>
            </div>
            <div id="icon_screen">
                <div id="icon_background">
                    <div id="icon_container">
                        <div id="icon_sprite"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tekst order">
            <div class="dato">
                <p>{myData['dato']}</p>
            </div>
            <div class="location">
                <h3>Location</h3>
                <a href="/faq">Manegen</a>
            </div>
            <div class="description">
                <h3>Description</h3>
                <p>{myData['beskrivelse']}</p>
            </div>
            <div class="genre">
                <h3>Genre</h3>
                <p>{myData['genre']}</p>
            </div>
        </div>
        <div class="list">
            <a href="/lineup" class="seeall">See all</a>
            <div class="artists">
                <div class="artist">
                <img src="/img/acid-pauli.jpg" alt="Acid Pauli" class="art_img">
                <a href="#">Acid Pauli</a>
                </div>
                <div class="artist">
                <img src="/img/anna-logic.jpg" alt="Anna Logic" class="art_img">
                <a href="/#">Anna Logic</a>
                </div>
            </div>
        </div>
    </div>
</MainLayout>

<style>
